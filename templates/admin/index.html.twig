{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Statistiques des ventes{% endblock %}

{% block content %}
    <h1 class="mb-4">Statistiques des ventes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Offre</th>
                <th>Tickets vendus</th>
            </tr>
        </thead>
        <tbody>
            {% for stat in stats %}
                <tr>
                    <td>{{ stat.offerName }}</td>
                    <td>{{ stat.sales }}</td>
                </tr>
            {% else %}
                <tr><td colspan="2">Aucune vente enregistr√©e.</td></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
