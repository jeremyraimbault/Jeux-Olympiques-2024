{% extends 'base.html.twig' %}

{% block title %}{{ offer.name }}{% endblock %}


{% block body %}
<div style="display: flex; align-items: center; justify-content: center; margin-top: 50px;">
    <div style="margin-right: 50px;">
        <img src="{{ asset('images/ticket.png') }}" alt="Ticket" style="width: 150px;">
    </div>
    <div>
        <h2>{{ offer.name }}</h2>
        <p>{{ offer.description }}</p>

        <form method="post" action="{{ path('cart_add', { id: offer.id }) }}">
            <div>
                <label>
                    <input type="radio" name="option" value="solo" checked onchange="updatePrice()">
                    <strong>Solo</strong> <br><small>1 entrÃ©e</small>
                </label><br>
                <label>
                    <input type="radio" name="option" value="duo" onchange="updatePrice()">
                    <strong>Duo</strong> <br><small>2 entrÃ©es</small>
                </label><br>
                <label>
                    <input type="radio" name="option" value="familiale" onchange="updatePrice()">
                    <strong>Familiale</strong> <br><small>4 entrÃ©es</small>
                </label>
            </div>

            <p style="margin-top: 20px;"><strong id="price">{{ offer.price }} â‚¬</strong></p>

            <input type="hidden" name="quantity" id="quantity" value="1">

            <button type="submit" class="btn btn-primary">
                ðŸ›’ Ajouter au panier
            </button>
        </form>

        <br/>
        <a href="{{ path('app_offer_index') }}" class="btn btn-primary text-white">Retourner Ã  la boutique</a>
        
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script>
        const basePrice = {{ offer.price }};
        const priceDisplay = document.getElementById('price');
        const quantityInput = document.getElementById('quantity');
        const addButton = document.querySelector('button[type="submit"]');
        const offerCapacity = {{ offer.capacity }};

        function updatePrice() {
            const selected = document.querySelector('input[name="option"]:checked').value;
            let count = 1;

            if (selected === 'duo') {
                count = 2;
            } else if (selected === 'familiale') {
                count = 4;
            }

            priceDisplay.textContent = (basePrice * count) + ' â‚¬';
            quantityInput.value = count;

            if (count > offerCapacity) {
                addButton.disabled = true;
                addButton.classList.add('btn-secondary');
                addButton.classList.remove('btn-primary');
                addButton.textContent = 'CapacitÃ© insuffisante';
            } else {
                addButton.disabled = false;
                addButton.classList.add('btn-primary');
                addButton.classList.remove('btn-secondary');
                addButton.textContent = 'ðŸ›’ Ajouter au panier';
            }
        }

        updatePrice();

        const radios = document.querySelectorAll('input[name="option"]');
        radios.forEach(radio => {
            radio.addEventListener('change', updatePrice);
        });
    </script>
{% endblock %}
